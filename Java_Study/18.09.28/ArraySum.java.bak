import java.util.Scanner;

class ArraySum {
	public static void main(String[] args) {
		System.out.println("배열 값 합계 구하기.");
		
		Scanner input = new Scanner(System.in);
		System.out.print("배열의 갯수를 입력하시오 : ");
		
		int a= input.nextInt();
		
		while(a<2) {
			System.out.print("2 이상의 값을 입력하세요 : ");
			a = input.nextInt();
			System.out.println();

		}
		



		int[] b = new int[a];


		int sum = 0;

		for(int i = 0; i < a; i++){
			System.out.print((i+1) + " 배열의 수 : " );
			int c = input.nextInt();		
			sum += c;
			System.out.println();
			}

		System.out.println("배열의 합계 : " + sum);
 
		

	}
}
